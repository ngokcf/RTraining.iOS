  target 'trainingTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'RxBlocking', '~> 3.0'
    pod 'RxTest',     '~> 3.0'
  end

  target 'trainingUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
